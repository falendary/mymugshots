div(data-ng-controller="landingController as vm")
	.landing-back-img
		img(data-ng-src="{{vm.config.background}}")
	md-content.md-padding.landing-content(flex)
		div(layout="row", layout-align="center center")
			md-card(flex-gt-sm="90", flex-gt-md="80").md-default-theme.custom-theme
					md-card-content
						.center-content(layout="column")
							h1(flex="100").shell-logo Site Title / Logo
							div(flex, layout-align="center center", layout="row")
								div(layout="row", layout-align="center center", flex).landing-menu
									md-button(href="#", type="button") Category 1
									md-button(href="#", type="button") Category 2
									md-button(href="#", type="button") Category 3
	.land-foot(layout="row", layout-wrap, flex)
		div(flex,
			layout="row",
			layout-align="center end",
			flex-sm="100",
			flex-gt-sm="50")
			p.copyright-holder
				|<i class="fa fa-copyright"></i> SiteName 2015
		div(layout="row",
			flex-sm="100",
			flex-gt-sm="50",
			layout-align="end end",
			layout-align-sm="center start",
			flex)
			div(flex).landing-links-menu
				md-button(href="#", type="button") Link 1
				md-button(href="#", type="button") Link 2
				md-button(href="#", type="button") Link 3