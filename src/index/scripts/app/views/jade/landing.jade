div(data-ng-controller="landingController as vm")
	.landing-back-img
		img(data-ng-src="{{vm.config.background}}")
	md-content.md-padding.landing-content(flex)
		div(layout="row", layout-align="center center")
			md-card(flex-gt-sm="90", flex-gt-md="80").md-default-theme.custom-theme
					md-card-content
						.center-content(layout="column")
							h1(flex="100").shell-logo Site Title / Logo
							div(flex, layout-align="center center", layout="row")
								md-menu-bar(flex).landing-menu
									md-menu(md-position-mode="center bottom", role="menu")
										button(type="button") Category 1
									md-menu(md-position-mode="center bottom", role="menu")
										button(type="button") Category 2
									md-menu(md-position-mode="center bottom", role="menu")
										button(type="button") Category 3
						.land-bot(layout="row")
							div(flex,
								layout-align="left bottom",
								flex-sm="40",
								flex-gt-sm="50")
								p.copyright-holder
									|<i class="fa fa-copyright"></i> SiteName 2015
							div(flex,
								layout-align="right bottom",
								flex-sm="60",
								flex-gt-sm="50")
								md-menu-bar(flex).landing-links-menu
									md-menu(md-position-mode="center bottom", role="menu")
										button(type="button") Link 1
									md-menu(md-position-mode="center bottom", role="menu")
										button(type="button") Link 2
									md-menu(md-position-mode="center bottom", role="menu")
										button(type="button") Link 3