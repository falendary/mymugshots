div(data-ng-controller="galleryController as vm")
	md-content.md-padding(flex)
		div(layout="row", layout-align="center center")
			md-card(flex-gt-sm="90", flex-gt-md="80").md-default-theme
				md-card-content
					.catal-logo-row(layout="row")
						a(href="#" class="catal-logo-a") Site Title / Logo
					md-toolbar.gallery-toolbar
						div.md-toolbar-tools
							div.nav-tools
								md-button.md-icon-button.gallery-datepicker-btn
									i.fa.fa-calendar
								md-button.md-icon-button.gallery-search-btn
									i.fa.fa-search
							div.nav-links
								md-button
									| Today
								md-button
									| Yesterday
								md-button
									| Last Week
								md-button
									| The Month
							p.filter-txt text explaining filter result
					div.gallery-carousel(data-ng-if="vm.slides")
						slick(infinite="true", slides-to-show="4", slides-to-scroll="4", variable-width="true", arrows="false", class="gallery-slick", slick-dir="")
							.item-car(data-ng-repeat="slide in vm.slides")
								md-grid-list(
									md-cols="1",
									md-row-height="1:1.6",
									md-gutter="1em")
									md-grid-title
										md-card(flex="100", data-ng-repeat="item in slide.items")
											.gallery-item
												.gallery-item-photo
													img(data-ng-src="{{item.image_url}}", alt="{{item.first_name}}")
												.gallery-item-title(data-ng-bind="::item.first_name")
												.gallery-item-date(data-ng-bind="::item.booking_datetime | date:'dd.mm.yyyy'")
					.advert-row(layout="row")
						.ltAd
						.rtAd

